{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/Build/${presetName}",
            "installDir": "${sourceDir}/Installed"
        },
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "Unix Makefiles",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_TOOLCHAIN_FILE": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-debug",
            "displayName": "x64 Debug",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows-static",
                "CMAKE_CXX_FLAGS": "-m64",
                "CMAKE_BUILD_TYPE": "Debug",
                "ARCHITECTURE": "x64"
            }
        },
        {
            "name": "x64-release",
            "displayName": "x64 Release",
            "inherits": "x64-debug",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows-static",
                "CMAKE_CXX_FLAGS": "-O3 -Wall -m64",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "x86-debug",
            "displayName": "x86 Debug",
            "inherits": "windows-base",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x86-windows-static",
                "CMAKE_CXX_FLAGS": "-m32",
                "CMAKE_BUILD_TYPE": "Debug",
                "ARCHITECTURE": "x86"
            }
        },
        {
            "name": "x86-release",
            "displayName": "x86 Release",
            "inherits": "x86-debug",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x86-windows-static",
                "CMAKE_CXX_FLAGS": "-O3 -Wall -m32",
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "make-base",
            "hidden": true,
            "nativeToolOptions": [
                "-j"
            ]
        },
        {
            "name": "x64-debug-default",
            "displayName": "Debug Build",
            "inherits": "make-base",
            "configurePreset": "x64-debug"
        },
        {
            "name": "x64-release-default",
            "displayName": "Release Build",
            "inherits": "make-base",
            "configurePreset": "x64-release"
        },
        {
            "name": "x86-debug-default",
            "displayName": "Debug Build",
            "inherits": "make-base",
            "configurePreset": "x86-debug"
        },
        {
            "name": "x86-release-default",
            "displayName": "Release Build",
            "inherits": "make-base",
            "configurePreset": "x86-release"
        }
    ]
}